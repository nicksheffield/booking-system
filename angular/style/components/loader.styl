.loader
	position absolute
	top 0
	left 250px
	width calc(100% - 250px)
	height 100%
	z-index 9999999
	background color-loader-bg
	color color-loader-icon
	border-radius body-rad
	pointer-events none
	opacity 0
	transition opacity 0.2s linear
	
	display flex
	justify-content center
	
	.icon
		margin-top calc((100vh / 2) - 50px)
		
	&.loader-show
		opacity 1