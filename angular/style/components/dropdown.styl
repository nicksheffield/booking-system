.ns-dropdown
	position relative
	width 100%
	display inline-block

.ns-dropdown-input-icon
	position absolute
	top 0.6em
	left 0.8em
	pointer-events none

.ns-dropdown-input-has-icon
	padding-left 2.3em

.ns-dropdown-arrow
	position absolute
	top 0.6em
	right 0.8em
	pointer-events none
	color #ccc

.ns-dropdown-close
	color #999
	position absolute
	top 0.75rem
	right 2.6rem
	font-size 0.9em
	cursor pointer

	&:hover
		color #000

.ns-dropdown-list
	position absolute
	top 100%
	z-index 99
	list-style none
	background #fff
	margin 0
	padding 0
	border-radius .25rem
	border 1px solid #ccc
	width 100%
	max-height 300px
	overflow-x none
	overflow-y auto

.ns-dropdown-item
	padding 0.5em
	cursor pointer
	user-select none

	&:hover
		background #eee

	&.focused
		background orange
		color #fff
		
		.subtext
			color rgba(255, 255, 255, 0.5)
			
	.subtext
		font-size 0.8em
		color rgba(0, 0, 0, 0.5)

.ns-dropdown-item-field
	display block