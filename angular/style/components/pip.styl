.pip
	font-size 0.9em
	border-radius 50px
	background #eee
	color #000
	padding 0.2em 0.6em

	&.pip-primary
		background color-primary
		color #fff

	&.pip-secondary
		background color-secondary
		color #000

	&.pip-success
		background color-success
		color #fff

	&.pip-info
		background color-info
		color #fff

	&.pip-warning
		background color-warning
		color #fff

	&.pip-danger
		background color-danger !important
		color #fff

	&.pip-dark
		background #555
		color #fff