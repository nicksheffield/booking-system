.page-advanced-filter
	padding 2em
	margin 1em
	border-radius border-rad
	background color-adv-bg
	color color-adv-text
	-webkit-font-smoothing antialiased
	
	h2
		margin 0

	label
		width 100px
		display inline-block
		
	label.checkbox
		width auto
		
		input
			margin-right 0.5em
		
	input[type=text],
	input[type=number]
		background color-adv-bg
		color color-adv-text
		border 1px solid color-adv-border

	.item
		padding 0.2em
		
	.group-heading
		padding 0.2em
		font-size 1.2em
		color color-adv-heading
		
	section
		background color-adv-section
		color inherit
		border none
		margin 0 0 1em
		
	.filter-drawer
		margin-top 1em
		
	.filter-col
		margin-right 1em
		
		&:last-of-type
			margin-right 0