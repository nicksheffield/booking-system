.page-advanced-filter
	width 250px
	padding 1em
	-webkit-font-smoothing antialiased
	background color-secondary
	border-left 1px solid #eee
	color color-adv-text
	
	&.filter-open
		background color-adv-bg
	
	h2
		margin 0
		font-weight 100
	
	label
		width 100px
		display inline-block
	
	label.checkbox
		width auto
		
		input
			margin-right 0.5em
	
	input[type=text],
	input[type=number]
		background color-adv-bg
		color color-adv-text
		border 1px solid color-adv-border
	
	.item
		padding 0.2em
	
	.group-heading
		padding 0.2em
		font-size 1.2em
		color color-adv-heading
		display none
		
	section
		background transparent
		border transparent
		color #fff
		padding 0
		margin-right 0 !important
		margin-left 0 !important