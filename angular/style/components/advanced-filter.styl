.page-advanced-filter
	padding 1em
	margin 1em
	border-radius border-rad
	-webkit-font-smoothing antialiased
	background color-secondary
	color color-adv-text
	
	&.filter-open
		background color-adv-bg
	
	h2
		margin 0
		font-weight 100
	
	label
		width 100px
		display inline-block
	
	label.checkbox
		width auto
		
		input
			margin-right 0.5em
	
	input[type=text],
	input[type=number]
		background color-adv-bg
		color color-adv-text
		border 1px solid color-adv-border
	
	.item
		padding 0.2em
	
	.group-heading
		padding 0.2em
		font-size 1.2em
		color color-adv-heading
	
	section
		background color-adv-section
		color inherit
		border none
		margin 0 0 1em
	
	.filter-col
		margin-right 1em
		
		&:last-of-type
			margin-right 0