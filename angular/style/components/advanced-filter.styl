.page-advanced-filter
	padding 2em
	background color-adv-bg
	color color-adv-text
	-webkit-font-smoothing antialiased

	label
		width 100px
		display inline-block
		
	label.checkbox
		width auto
		
		input
			margin-right 0.5em
		
	input[type=text],
	input[type=number]
		background color-adv-bg
		color color-adv-text
		border 1px solid color-adv-border

	.item
		padding 0.2em
		
	.group-heading
		padding 0.2em
		font-size 1.2em
		color color-adv-heading
		
	section
		background #444
		color inherit
		border none
		
	