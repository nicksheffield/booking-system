.breadcrumbs
	color color-breadcrumbs-text
	border-bottom 1px solid color-page-header-border
	padding 0.8em 2em
	width 100%
	display flex
	align-items center
	
	& > *
		animation fade-in animation-fade-in-speed
		
	a
		color color-breadcrumbs-link
		
		&:hover
			color color-breadcrumbs-hover
	
	ul
		list-style none
		padding 0
		margin 0
		font-size 0.7em
		text-transform uppercase
		
		li:after
			content '/' // » → ⇢
			display inline-block
			margin 0 0.5em
			color color-breadcrumbs-delimiter
			
		li:last-of-type:after
			content ''
