.pagination-container
	.pagination
		user-select none
		
		.page-link
			min-width 42px
			text-align center
			cursor pointer
			text-decoration none
			color color-clickable
			
			&:hover
				color color-clickable-hover
			
		.page-item.active .page-link
			background color-pagination-highlight
			border-color color-pagination-highlight
			color #fff
			
	.page-picker
		width 100px
		margin 1em 0 1em 1em
		
	select.form-control:not([size]):not([multiple])
		height 2.6em