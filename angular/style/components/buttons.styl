.btn
	border 0
	border-radius button-rad
	background white
	color #000
	transition background-color transition-time ease, color transition-time ease, box-shadow transition-time ease
	-webkit-font-smoothing antialiased
	
	&:hover
		background color-secondary
		
	&.btn-check
		input[type=checkbox], input[type=radio]
			margin-right 0.5em
			outline 0 !important
			cursor pointer
		
	&.btn-icon-right
		i.fa
			margin-left 0.5em
			
	&.btn-circle
		border-radius 100px
		padding 0.4em
	
	&.btn-primary
		background color-primary
		color #fff
		
		&:hover
			background lighten(color-primary, 12.5%)
		&:active
			background darken(color-primary, 25%)
	
	&.btn-secondary
		background color-secondary
		color #000
		
		&:hover
			background lighten(color-secondary, 12.5%)
		&:active
			background darken(color-secondary, 25%)
	
	&.btn-success
		background color-success
		color #fff
		
		&:hover
			background lighten(color-success, 12.5%)
		&:active
			background darken(color-success, 25%)
	
	&.btn-info
		background color-info
		color #fff
		
		&:hover
			background lighten(color-info, 12.5%)
		&:active
			background darken(color-info, 25%)
	
	&.btn-warning
		background color-warning
		color #fff
		
		&:hover
			background lighten(color-warning, 20%)
		&:active
			background darken(color-warning, 25%)
	
	&.btn-danger
		background color-danger
		color #fff
		
		&:hover
			background lighten(color-danger, 12.5%)
		&:active
			background darken(color-danger, 25%)
			
	&.btn-sm
		padding 0.5em 1em
		
	&.btn-large
		font-size 2em
		padding 0.5em 1em
		
	&.btn-link
		color #000
		padding 0
		display inline
		
		&:hover, &:active
			background transparent
		
	&:focus, &:active
		outline 0 !important

.btn-icon
	i.fa
		margin-right 0.5em
		
.btn-default-focus
	background none
	
.button-row
	.btn
		margin .2em 0 .2em .4em

.btn-group
	border-radius button-rad
	transition box-shadow transition-time ease
	
	.btn:not(.btn-link):active
		transform none
		
	& > button.btn, & > a.btn
		box-shadow none
		
		&:hover, &:active
			box-shadow none
		
	&.show
		.dropdown-menu
			display block
			margin 0
			padding 0
			box-shadow none
			border 1px solid #ccc
		
	.dropdown-menu
		border 0
		overflow hidden
		
		.dropdown-item
			cursor pointer
			padding 0.5em 20px
			border-bottom 1px solid #eee
			font-size 0.9em
			
			&:last-child
				border-bottom 0