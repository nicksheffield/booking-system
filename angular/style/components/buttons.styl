.btn
	border 0
	background black
	color #fff
	transition background-color transition-time ease, color transition-time ease 
	
	&:hover
		background #333
	
	&.btn-icon
		i.fa
			margin-right 0.5em
		
	&.btn-icon-right
		i.fa
			margin-left 0.5em
	
	&.btn-primary
		background color-primary
		
		&:hover
			background lighten(color-primary, 12.5%)
		&:active
			background darken(color-primary, 25%)
	
	&.btn-secondary
		background color-secondary
		color #000
		
		&:hover
			background lighten(color-secondary, 12.5%)
		&:active
			background darken(color-secondary, 25%)
	
	&.btn-success
		background color-success
		
		&:hover
			background lighten(color-success, 12.5%)
		&:active
			background darken(color-success, 25%)
	
	&.btn-info
		background color-info
		
		&:hover
			background lighten(color-info, 12.5%)
		&:active
			background darken(color-info, 25%)
	
	&.btn-warning
		background color-warning
		
		&:hover
			background lighten(color-warning, 12.5%)
		&:active
			background darken(color-warning, 25%)
	
	&.btn-danger
		background color-danger
		
		&:hover
			background lighten(color-danger, 12.5%)
		&:active
			background darken(color-danger, 25%)
		
	&.btn-large
		font-size 2em
		padding 0.5em 1em
		
	&:focus, &:active
		outline 0 !important
		

.button-row
	.btn
		margin 0.2em 0.4em 0.2em 0