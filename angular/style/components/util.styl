.wrapper
	border-radius body-rad
	position relative
	
.frame
	background #fff
	border-radius 0 body-rad body-rad 0
	
	@media (max-width bp-sm)
		border-radius 0
		
	@media (max-width bp-md)
		border-radius 0 0 body-rad body-rad
	
.bump-down
	margin-top 1em
	
.pad-down
	padding-bottom 1em
	
.push-right
	margin-right 1em
	
.full-height
	height 100%
	
.spaced-row
	& > *
		margin-right 1em
		
	& > *:last-child
		margin-right 0
	
.space-row
	& > *
		margin-right 1em
	
	& > *:last-of-type
			margin-right 0

ul.no-bullets
	padding-left 0
	list-style none
	
.center-text
	text-align center
	
.bg-primary
	background color-primary
	color #fff

.bg-secondary
	background color-secondary
	color #000

.bg-success
	background color-success
	color #fff

.bg-info
	background color-info
	color #fff

.bg-warning
	background color-warning
	color #fff

.bg-danger
	background color-danger
	color #fff

.bg-dark
	background #555
	color #fff