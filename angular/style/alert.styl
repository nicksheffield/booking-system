.alert
	-webkit-font-smoothing antialiased
	border 0
	color #fff
	background #000
	
	i.fa
		margin-right 1em
	
	&.alert-primary
		background color-primary
	
	&.alert-secondary
		color #000
		background color-secondary
	
	&.alert-success
		background color-success
	
	&.alert-info
		background color-info
	
	&.alert-warning
		background color-warning
	
	&.alert-danger
		background color-danger