.sidebar
	width 250px
	padding 1em 2em
	background color-sidebar-background
	color color-sidebar-text
	border-radius body-rad 0 0 body-rad
	-webkit-font-smoothing antialiased
	
	@media (max-width bp-sm)
		width 100%
	
	.site-logo
		padding 0.5em
	
	.logo
		position relative
		
		.caption
			position absolute
			bottom 0
			left 0
			width 100%
			background color-sidebar-background
			color color-sidebar-text
			font-size 0.7em
			font-weight bold
			text-transform uppercase

		img
			width 100%
	
	h1
		font-size 1.5em
		align-self center
		font-weight 400
		margin 0
		color color-secondary
	
	ul
		list-style none
		padding 0
		margin 0
		
	li.title
		color rgba(255, 255, 255, 0.6)
		text-transform uppercase
		font-size 0.7em
		font-weight bold
		margin 3em 0 1em
		padding-left 1em
		user-select none
		pointer-events none
		
		@media (max-width bp-sm)
			display none
		
	a
		color color-sidebar-text
		text-decoration none
		display flex
		align-items center
		padding 0.5em 1em
		height 100%
		border-radius 3px
		font-size 0.8em
		transition background-color transition-time ease
		
		.count
			background rgba(255, 255, 255, 0.1)
			padding 0 0.5em
			border-radius 50px
		
		.fa:not(.fa-spin)
			margin-right 0.5em
		
	a:hover
		background color-sidebar-hover
		color color-sidebar-text
	
	.current a
		background color-sidebar-highlight
