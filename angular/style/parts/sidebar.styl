.sidebar
	width 250px
	min-width 250px
	max-width 250px
	background color-sidebar-background
	color color-sidebar-text
	border-radius body-rad 0 0 body-rad
	-webkit-font-smoothing antialiased
	
	@media (max-width bp-sm)
		width auto
		max-width initial
		min-width initial
		border-radius 0
		
	@media (max-width bp-md)
		width 100%
		max-width initial
		min-width initial
		border-radius body-rad body-rad 0 0
	
	header
		padding 0.5em
		height top-height
		
		@media (max-width bp-md)
			padding 1em 1em 1em 0
			height auto
	
	.logo
		min-width 50px
		min-height 50px
		margin .5em 1em .5em 2em
		
		@media (max-width bp-md)
			margin-left 1em
	
	h1
		font-size 1.5em
		align-self center
		font-weight 400
		margin 0
		color color-secondary
		
		@media (max-width bp-md)
			display none
			
		@media (max-width bp-sm)
			display block
		
	nav
		border-bottom 1px solid color-sidebar-border
		
		@media (max-width bp-md)
			border-bottom 0
	
	ul
		list-style none
		padding 0
		margin 0
		
		@media (max-width bp-md)
			height 100%
		
	a
		color inherit
		text-decoration none
		display flex
		align-items center
		padding 0 1em
		font-size 0.9em
		height row-height - 1px
		border-top 1px solid color-sidebar-border
		transition background-color transition-time ease
		
		@media (max-width bp-md)
			border-top 0
			display flex
			height 100%
			
		@media (max-width bp-sm)
			padding 1em
		
	a:hover
		background darken(color-sidebar-highlight, 60%)
		border-top-color transparent
	
	.current a
		background color-sidebar-highlight
		border-top-color transparent