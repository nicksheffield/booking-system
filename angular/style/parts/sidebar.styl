.sidebar
	width 250px
	display flex
	flex-direction column
	background color-sidebar-background
	color color-sidebar-text
	-webkit-font-smoothing antialiased
	
	header
		padding 1em
		height 108px
	
	.logo
		min-width 50px
		min-height 50px
		margin 0 1em 0 1.6em
	
	h1
		font-size 1.5em
		align-self center
		font-weight 500
		margin 0
		
	nav
		border-bottom 1px solid color-sidebar-border
	
	ul
		list-style none
		padding 0
		margin 0
		
	a
		color inherit
		text-decoration none
		display block
		padding 0.8em 1em
		font-size 0.9em
		border-top 1px solid color-sidebar-border
		transition background-color transition-time ease
		
		i.fa
			float right
			line-height 1.5
			transition transform transition-time ease
			display none
		
	a:hover
		background darken(color-sidebar-highlight, 60%)
		border-top-color transparent
	
	.current a
		background color-sidebar-highlight
		border-top-color transparent