.sidebar
	width 250px
	min-width 250px
	max-width 250px
	background color-sidebar-background
	color color-sidebar-text
	-webkit-font-smoothing antialiased
	
	@media (max-width bp-sm)
		width auto
		max-width initial
		min-width initial
		
	@media (max-width bp-md)
		width 100%
		max-width initial
		min-width initial
	
	header
		padding 1em
		height 99px
		
		@media (max-width bp-md)
			padding 1em 1em 1em 0
			height auto
	
	.logo
		min-width 50px
		min-height 50px
		margin 0 1em 0 1.6em
	
	h1
		font-size 1.5em
		align-self center
		font-weight 500
		margin 0
		
	nav
		border-bottom 1px solid color-sidebar-border
		
		@media (max-width bp-md)
			border-bottom 0
	
	ul
		list-style none
		padding 0
		margin 0
		
	a
		color inherit
		text-decoration none
		display block
		padding 0.8em 1em
		font-size 0.9em
		border-top 1px solid color-sidebar-border
		transition background-color transition-time ease
		
		@media (max-width bp-md)
			border-top 0
			display flex
		
		i.fa
			float right
			line-height 1.5
			transition transform transition-time ease
			display none
		
	a:hover
		background darken(color-sidebar-highlight, 60%)
		border-top-color transparent
	
	.current a
		background color-sidebar-highlight
		border-top-color transparent