.page-header
	padding 2em
	background color-page-header-background
	color color-page-header-text
	
	h1
		margin 0
		
	& > *
		animation fade-in animation-fade-in-speed


.page-content
	padding 2em
	animation fade-in animation-fade-in-speed


section
	margin 2em 0
	padding 1em
	background color-page-section-background
	color color-page-section-text
	border-radius border-rad
	
	&:first-child
		margin-top 0
	
	h2
		margin-bottom 0.5em